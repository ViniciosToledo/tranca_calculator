// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id String @id @default(uuid())
  timeUm String
  timeDois String
  pontosTimeUm Int
  pontosTimeDois Int
  userId String
  user User @relation(fields: [userId], references: [id])
}

model User {
  id String @id @default(uuid())
  nome String
  games Game[]
}